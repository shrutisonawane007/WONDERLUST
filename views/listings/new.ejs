<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br>
    <h3>Create new Listing</h3>
    <form method="post" action="/listings" novalidate class=" needs-validation">
        <div class="mb-3">
          <lable class="form-lable" for="title">Title</lable>
          <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
          <lable class="form-lable" for="description">Description</lable>
          <textarea name="listing[description]" placeholder="enter description" type="text"class="form-control" required></textarea>
          <div class="invalid-feedback">Please enter a short description</div> 
        </div>
        <div class="mb-3">
           <lable class="form-lable" for="image">Image Link</lable>
           <input name="listing[image]" placeholder="enter image URL/link"class="form-control" type="text">
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <lable class="form-lable" for="price">Price</lable>
            <input name="listing[price]" placeholder="1200" class="form-control"required>
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <lable class="form-lable" for="country">Country</lable>
            <input name="listing[country]" placeholder="India"class="form-control" type="text" required>
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>
        <div class="mb-3">
          <lable class="form-lable" for="location">Location</lable>
          <input name="listing[location]" placeholder="Jaipur, Rajsthan" class="form-control"type="text" required>
          <div class="invalid-feedback">Location should be valid </div>
        </div>
        <br>
        <button class="btn btn-dark add-btn">ADD</button>
         <br><br><br>
    </form>
  </div>
</div>
